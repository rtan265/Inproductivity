{
  "manifest_version": 3,
  "name": "Social Media Blocker",
  "description": "Extension that blocks social media to increase productivity",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ]
}