{
  "manifest_version": 2,
  "name": "Social Media Blocker",
  "description": "Extension that blocks social media to increase productivity",
  "version": "0.0.0.2",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js",
      "backgroundEmail.js",
      "popup.js"
    ]
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "http://worldtimeapi.org/*"
  ]
}